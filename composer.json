{
    "name": "devlib/candybar",
    "description": "Tools to make phpunit tests results easier to understand follow, share and integrate",
    "type": "library",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian7",
            "email": "adrian.silimon@yahoo.com"
        }
    ],
    "bin": [
      "bin/candybar"
    ],
    "require": {
        "phpunit/phpunit": "^6.0|^7.0",
        "phpunit/php-code-coverage": "^5.0",
        "adrian7/badges-poser": "^1.2.3",
        "laravie/parser": "~1.0",
        "symfony/filesystem": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "DevLib\\Candybar\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-dev": "0.x-dev"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.3"
    }
}
